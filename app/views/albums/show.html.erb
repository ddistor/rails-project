
<div class="box">
<div class="columns">
  <div class="column is-one-quarter">
    <img src=<%=@album.image%>>
  </div>

  <div class="column">
    <h1 class="title is-1"><%= @album.name %></h1>
    <% if !@album.release_date.nil?%>
      <p class="subtitle is-3">Album by <%= !@album.artist.nil? ? (link_to @album.artist.name, @album.artist) : (link_to @album.band.name, @album.band)%> released in <%= @album.release_date.strftime("%B %d, %Y") %> through <%= @album.label %> </p>
    <% else%>
      <p class="subtitle is-3">Album by <%= !@album.artist.nil? ? (link_to @album.artist.name, @album.artist) : (link_to @album.band.name, @album.band)%> released through <%= @album.label %> </p>
    <% end %>
    <p class="subtitle is-4"><%=@album.info%></p>
  </div>
</div>



<ul class="columns is-multiline">
  <% @album.songs.each do |song|%>
    <li class="column is-half">
        <h1 class="title is-1"><%= song.position %>. <%= link_to song.title, song %></h1>
        <p class="subtitle is-3"><%= song.title %> is a song by <%= !song.album.artist.nil? ? (link_to song.album.artist.name, song.album.artist) : (link_to song.album.band.name, song.album.band)%> from the album <%= link_to song.album.name, song.album %></p>
        <p class="subtitle is-4"><%= song.info%></p>
    </li>

  <% end%>
</ul>
</div>
